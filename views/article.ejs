<%- include('./partials/_head')%>
<main id="article">
    <h2><%= blogdata[id].title %></h2>
    <img src="<%= blogdata[id].url %> " alt="">
    <section id="content">
        <div class="autor">
            <img src="<%= blogdata[id].author_bild %>" alt="">
            <div>
                <h3><%= blogdata[id].author %></h3>
                <p><%= blogdata[id].published_at %> / <%= blogdata[id].duration %> min read</p>
            </div>
            <a href="#"><img src="/twitter.svg" alt=""></a>
        </div>
        <p><%= blogdata[id].body %></p>
    </section>
    <section class="eye">
        <img src="/eye.svg" alt="">
        <h3>What to read next</h3>
    </section>
    <section class="three">
        <% let randomNum = [] %> 
        <% for(let i = 0 ; i < 6 ; i++){ %>
            <% let random1 %> 
            <% do { %>
                <% random1 = Math.floor(Math.random() * blogdata.length) %> 
            <% } while(randomNum.includes(random1)) %>
            <% randomNum.push(random1) %> 
        <% } %> 
        <% randomNum.forEach(elt=>{ %>
        <article>
            <a href="/article/<%= blogdata[elt].id %> "></a>
            <img src="<%= blogdata[elt].url %> " alt="">
            <h2><%= blogdata[elt].title %> </h2>
        </article>
        <% }) %>
    </section>
</main>
<%- include('./partials/_foot')%>